<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="64dp"
    tools:context="com.opengl.LaunchingActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/icehockey"
            android:text="Ice Hockey"
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/particles"
            android:text="Particles and Cube Map"
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/duetCamera"
            android:text="Static Image + Camera Segmentation"
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/streamedVideoCamera"
            android:text="Streamed Video + Camera Segmentation"
            android:layout_width="match_parent"
            android:layout_height="86dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blurredCamera"
            android:text="Blurred camera"
            android:layout_width="match_parent"
            android:layout_height="86dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>